{
      "env": {
            "browser": true,
            "es2021": true
      },
      "extends": "eslint:recommended",
      "parserOptions": {
            "ecmaVersion": "latest",
            "sourceType": "module"
      },
      "overrides": [
            {
                  "files": ["src/**/*.test.js", "./**/*.mock.js"],
                  "env": { "jest": true },
                  "plugins": ["jest"],
                  "extends": ["plugin:jest/recommended"],
                  "rules": { "jest/prefer-expect-assertions": "off" }
            }
      ],
      "rules": {
            "no-undef": "off"
      }
}
