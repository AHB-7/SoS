{
      "env": {
            "browser": true,
            "es2021": true
      },
      "extends": "eslint:recommended",
      "parserOptions": {
            "ecmaVersion": "latest",
            "sourceType": "module"
      },
      "overrides": [
            {
                  "files": ["src/**/*.test.js", "src/**/*.mock.js"],
                  "env": { "jest": true },
                  "plugins": ["jest"],
                  "extends": ["plugin:jest/recommended"],
                  "rules": { "jest/prefer-expect-assertions": "off" }
            },
            {
                  "files": ["**/*.cy.js"],
                  "env": { "cypress/globals": true },
                  "plugins": ["cypress"],
                  "extends": ["plugin:cypress/recommended"],
                  "rules": {
                        "cypress/no-unnecessary-waiting": "off",
                        "no-unused-vars": "off"
                  }
            },
            {
                  "files": ["cypress.config.js"],
                  "rules": {
                        "no-unused-vars": "off"
                  }
            }
      ],
      "rules": {
            "no-undef": "off"
      }
}
